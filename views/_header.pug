header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      a.nav_el.nav__el--logout Log out
      a.nav_el(href='#')
        img.nav__user-img(src=`img/users/${user.phote}` alt=`photo of ${user.phote}`)
        span= user.name.split(' ')[0]
    else 
      a.nav__el(href='/login') Log in
      button.nav__el--cta(href='#') Sign up

